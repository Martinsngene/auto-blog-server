generator client {
    provider = "prisma-client-js"
    output   = "./generated/prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// Posts Table
model Articles {
    id          Int      @id @default(autoincrement())
    post_id     String   @unique
    url         String
    title       String
    content     String
    slug        String
    description String
    notified    Boolean  @default(false)
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}

// Events Table
model Events {
    id          Int      @id @default(autoincrement())
    event_id    String
    title       String
    description String
    start_time  String
    end_time    String
    location    String
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}

// Subscribers Table
model Subscribers {
    id         Int      @id @default(autoincrement())
    first_name String
    last_name  String
    email      String   @unique
    createdAt  DateTime @default(now())
}
